<div class="well well-lg">
<form id="order-filter-form" class="form-horizontal" role="form" method="GET" action="{{ path('orders', {'ordertype':ordertype}) }}">
    <div class="ym-fbox-text">
        <p><b>Поиск по архиву:</b></p>
    </div>

    {{ form_errors(form) }}

	<div class="form-group">
