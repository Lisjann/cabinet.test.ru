<div class="panel-body">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h2>Изменить данные о клиенте</h2>
		</div>
		<div class="well well-lg">
			<form class="form-horizontal" role="form" action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" >

				{#{ form_widget(form) }#}

				<div class="form-group">
					{{ form_label(form.full_name, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					{{ form_errors(form.full_name) }}
					<div class="col-sm-9">
						{{ form_widget(form.full_name, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.companyYur, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					{{ form_errors(form.companyYur) }}
					<div class="col-sm-9">
						{{ form_widget(form.companyYur, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.company, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					{{ form_errors(form.company) }}
					<div class="col-sm-9">
						{{ form_widget(form.company, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.location, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					{{ form_errors(form.location) }}
					<div class="col-sm-9">
						{{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.address, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					{{ form_errors(form.address) }}
					<div class="col-sm-9">
						{{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.inn, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					{{ form_errors(form.inn) }}
					<div class="col-sm-9">
						{{ form_widget(form.inn, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.scope, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					{{ form_errors(form.scope) }}
					<div class="col-sm-9">
						{{ form_widget(form.scope, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.shop, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					{{ form_errors(form.shop) }}
					<div class="col-sm-9">
						{{ form_widget(form.shop, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.telephone, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					{{ form_errors(form.telephone) }}
					<div class="col-sm-9">
						{{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.message, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					{{ form_errors(form.message) }}
					<div class="col-sm-9">
						{{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				{#{ form_widget(form.plainPassword) }#}
				{#{ form_widget(form.new) }#}
				{#{ form_widget(form._token) }#}
				
				{{ form_rest(form) }}
				
				<div class="form-group">
					<div class="col-sm-offset-3 col-sm-9">
						<button type="submit" class="btn btn-default">
							{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}
						</button>
					</div>
				</div>

			</form>
		</div>
	</div>
</div>
